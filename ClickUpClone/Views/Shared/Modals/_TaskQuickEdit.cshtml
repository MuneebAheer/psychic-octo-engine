<!-- Task Quick Edit Modal -->
<div class="modal fade" id="taskQuickEditModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Task</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form onsubmit="handleQuickTaskEdit(event)" id="quickEditForm">
                <div class="modal-body">
                    <input type="hidden" id="quickEditTaskId">

                    <div class="form-group mb-3">
                        <label for="quickEditTitle" class="form-label">Title</label>
                        <input type="text" class="form-control" id="quickEditTitle" required>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="quickEditStatus" class="form-label">Status</label>
                                <select class="form-select" id="quickEditStatus" 
                                        onchange="updateTaskStatus(document.getElementById('quickEditTaskId').value, this.value)">
                                    <option value="ToDo">To Do</option>
                                    <option value="InProgress">In Progress</option>
                                    <option value="InReview">In Review</option>
                                    <option value="Done">Done</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="quickEditPriority" class="form-label">Priority</label>
                                <select class="form-select" id="quickEditPriority"
                                        onchange="updateTaskPriority(document.getElementById('quickEditTaskId').value, this.value)">
                                    <option value="Low">Low</option>
                                    <option value="Normal">Normal</option>
                                    <option value="High">High</option>
                                    <option value="Urgent">Urgent</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <label for="quickEditDueDate" class="form-label">Due Date</label>
                        <input type="date" class="form-control" id="quickEditDueDate">
                    </div>

                    <div class="form-group mb-3">
                        <label for="quickEditDescription" class="form-label">Description</label>
                        <textarea class="form-control" id="quickEditDescription" rows="3"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    function openQuickEditModal(taskId, title, status, priority, dueDate, description) {
        document.getElementById('quickEditTaskId').value = taskId;
        document.getElementById('quickEditTitle').value = title;
        document.getElementById('quickEditStatus').value = status;
        document.getElementById('quickEditPriority').value = priority;
        document.getElementById('quickEditDueDate').value = dueDate || '';
        document.getElementById('quickEditDescription').value = description || '';

        new bootstrap.Modal(document.getElementById('taskQuickEditModal')).show();
    }

    function handleQuickTaskEdit(event) {
        event.preventDefault();
        // TODO: Implement full task update
        console.log('Quick edit task');
        bootstrap.Modal.getInstance(document.getElementById('taskQuickEditModal')).hide();
    }
</script>
