@model IList<AttachmentDto>

<div class="attachments-section mt-4">
    <h6 class="mb-3">Attachments (@Model.Count)</h6>

    @if (Model.Count > 0)
    {
        <div class="attachments-list list-group mb-3" id="attachments-container">
            @foreach (var attachment in Model.OrderByDescending(a => a.CreatedAt))
            {
                <div class="list-group-item d-flex justify-content-between align-items-center" 
                     data-attachment-id="@attachment.Id">
                    <div class="flex-grow-1">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-file me-2"></i>
                            <div>
                                <a href="@attachment.FilePath" target="_blank" 
                                   class="text-decoration-none">
                                    @attachment.FileName
                                </a>
                                <br>
                                <small class="text-muted">
                                    @{
                                        var sizeKb = attachment.FileSize / 1024.0;
                                        var sizeDisplay = sizeKb > 1024 ? 
                                            (sizeKb / 1024.0).ToString("0.##") + " MB" : 
                                            sizeKb.ToString("0.##") + " KB";
                                    }
                                    @sizeDisplay • Uploaded by @attachment.UploadedByName • 
                                    @attachment.CreatedAt.ToString("MMM dd, yyyy")
                                </small>
                            </div>
                        </div>
                    </div>
                    <button class="btn btn-sm btn-outline-danger" 
                            onclick="deleteAttachmentHandler(@attachment.Id)">
                        <i class="bi bi-trash"></i>
                    </button>
                </div>
            }
        </div>
    }

    <!-- Upload Form -->
    <div class="upload-section">
        <form class="d-flex gap-2" onsubmit="handleFileUploadForm(event, @ViewBag.TaskId)">
            <input type="file" class="form-control" id="file-input" required>
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-cloud-upload"></i> Upload
            </button>
        </form>
        <small class="text-muted d-block mt-2">
            Max file size: 10 MB. Allowed types: PDF, DOC, DOCX, TXT, JPG, PNG, GIF, ZIP, XLSX
        </small>
    </div>
</div>

<script>
    function deleteAttachmentHandler(attachmentId) {
        if (confirm('Are you sure you want to delete this attachment?')) {
            deleteAttachment(attachmentId);
        }
    }

    function handleFileUploadForm(event, taskId) {
        event.preventDefault();
        const fileInput = document.getElementById('file-input');
        if (fileInput.files.length > 0) {
            uploadAttachment(taskId, fileInput.files[0]);
            fileInput.value = '';
        }
    }
</script>
