@model ClickUpClone.DTOs.CreateProjectDto

@{
    Layout = "_Layout";
    ViewData["Title"] = "Create Project";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title mb-4">Create New Project</h4>

                <form method="post">
                    <div class="mb-3">
                        <label class="form-label">Project Name <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" asp-for="Name" required maxlength="200" />
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea class="form-control" asp-for="Description" rows="3" maxlength="500"></textarea>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Color</label>
                        <input type="color" class="form-control form-control-color" asp-for="Color" />
                    </div>

                    <input type="hidden" asp-for="WorkspaceId" />

                    <div class="btn-group" role="group">
                        <button type="submit" class="btn btn-success">Create Project</button>
                        <a href="/workspaces/@Model.WorkspaceId" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
