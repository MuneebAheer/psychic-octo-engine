@model ClickUpClone.DTOs.ProjectDto

@{
    Layout = "_Layout";
    ViewData["Title"] = Model.Name;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>@Model.Name</h2>
    <div class="btn-group" role="group">
        <a href="@Url.Action("Board", "Tasks", new { projectId = Model.Id })" class="btn btn-primary">
            <i class="bi bi-kanban"></i> Kanban Board
        </a>
        <a href="/projects/@Model.Id/edit" class="btn btn-warning">
            <i class="bi bi-pencil"></i> Edit
        </a>
        <form method="post" action="/projects/@Model.Id/delete" style="display:inline;">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-danger" onclick="return confirm('Delete project?')">
                <i class="bi bi-trash"></i> Delete
            </button>
        </form>
    </div>
</div>

<div class="card mb-4">
    <div class="card-body">
        <h5 class="card-title">Project Details</h5>
        <p><strong>Description:</strong> @(Model.Description ?? "No description")</p>
        <p><strong>Created by:</strong> @Model.CreatedByName</p>
        <p><strong>Created:</strong> @Model.CreatedAt.ToString("MMM dd, yyyy")</p>
    </div>
</div>

<h4>Lists</h4>
@if (ViewBag.Lists != null && ViewBag.Lists.Count > 0)
{
    <div class="row">
        @foreach (var list in ViewBag.Lists)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">@list.Name</h5>
                    </div>
                    <div class="card-body">
                        <a href="/tasks?listId=@list.Id" class="btn btn-sm btn-primary w-100">View Tasks</a>
                        <a href="/tasks/create?listId=@list.Id&projectId=@Model.Id" class="btn btn-sm btn-success w-100 mt-2">+ Add Task</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>No lists in this project yet.</p>
}

<a href="/tasks/create?projectId=@Model.Id" class="btn btn-primary">+ Create List</a>
