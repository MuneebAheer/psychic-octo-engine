@model IEnumerable<ClickUpClone.Models.Notification>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Notifications";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Notifications</h2>
    @if (Model.Any(n => !n.IsRead))
    {
        <form method="post" action="/notifications/markallasread" style="display:inline;">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-sm btn-primary">Mark All as Read</button>
        </form>
    }
</div>

@if (Model.Any())
{
    <div class="list-view">
        @foreach (var notification in Model.OrderByDescending(n => n.CreatedAt))
        {
            <div class="card mb-2 @(!notification.IsRead ? "border-primary bg-light" : "")">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div class="flex-grow-1">
                            <h5 class="card-title">@notification.Title</h5>
                            <p class="card-text">@notification.Message</p>
                            <small class="text-muted">
                                @notification.CreatedAt.ToString("MMM dd, yyyy HH:mm")
                                @if (notification.IsRead && notification.ReadAt.HasValue)
                                {
                                    <span> - Read @notification.ReadAt.Value.ToString("MMM dd, yyyy HH:mm")</span>
                                }
                            </small>
                        </div>
                        <div>
                            @if (!notification.IsRead)
                            {
                                <form method="post" action="/notifications/markasread" style="display:inline;">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@notification.Id" />
                                    <button type="submit" class="btn btn-sm btn-outline-primary">Mark as Read</button>
                                </form>
                            }
                            <form method="post" action="/notifications/delete" style="display:inline;">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@notification.Id" />
                                <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info">
        <p>No notifications. You're all caught up! ðŸŽ‰</p>
    </div>
}
