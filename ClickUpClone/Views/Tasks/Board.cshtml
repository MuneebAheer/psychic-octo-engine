@using ClickUpClone.ViewModels.Tasks;
@using ClickUpClone.Models;
@model TaskBoardFilterViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = $"Kanban Board - {Model.Project?.Name ?? "Project"}";
}

<div class="page-header mb-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h1 class="h3 mb-0">
                <i class="bi bi-kanban"></i>
                Kanban Board
            </h1>
            @if (Model.Project != null)
            {
                <small class="text-muted d-block mt-1">@Model.Project.Name</small>
            }
        </div>
        <div class="btn-group" role="group">
            <a href="@Url.Action("Details", "Projects", new { id = Model.Project?.Id })" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Project
            </a>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createTaskModal">
                <i class="bi bi-plus-lg"></i> New Task
            </button>
        </div>
    </div>

    <!-- Statistics Bar -->
    <div class="stats-bar mb-3">
        <div class="row g-2 text-center">
            <div class="col-6 col-sm-3">
                <small class="text-muted">Total</small>
                <div class="h5 mb-0">@Model.TotalTasksCount</div>
            </div>
            <div class="col-6 col-sm-3">
                <small class="text-muted">In Progress</small>
                <div class="h5 mb-0 text-warning">@Model.InProgressTasksCount</div>
            </div>
            <div class="col-6 col-sm-3">
                <small class="text-muted">Completed</small>
                <div class="h5 mb-0 text-success">@Model.CompletedTasksCount</div>
            </div>
            <div class="col-6 col-sm-3">
                <small class="text-muted">Overdue</small>
                <div class="h5 mb-0 text-danger">@Model.OverdueTasksCount</div>
            </div>
        </div>
    </div>

    <!-- Advanced Filter Bar -->
    <div class="filter-bar">
        <div class="row g-2">
            <div class="col-md-4">
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                    <input type="text" class="form-control" id="searchInput" placeholder="Search tasks..." value="@Model.SearchTerm">
                </div>
            </div>
            <div class="col-md-2">
                <select class="form-select" id="priorityFilter">
                    <option value="">All Priorities</option>
                    <option value="Low" @(Model.FilterPriority == TaskPriority.Low ? "selected" : "")>Low</option>
                    <option value="Normal" @(Model.FilterPriority == TaskPriority.Normal ? "selected" : "")>Normal</option>
                    <option value="High" @(Model.FilterPriority == TaskPriority.High ? "selected" : "")>High</option>
                    <option value="Urgent" @(Model.FilterPriority == TaskPriority.Urgent ? "selected" : "")>Urgent</option>
                </select>
            </div>
            <div class="col-md-2">
                <select class="form-select" id="statusFilter">
                    <option value="">All Statuses</option>
                    <option value="ToDo" @(Model.FilterStatus == TaskStatus.ToDo ? "selected" : "")>To Do</option>
                    <option value="InProgress" @(Model.FilterStatus == TaskStatus.InProgress ? "selected" : "")>In Progress</option>
                    <option value="InReview" @(Model.FilterStatus == TaskStatus.InReview ? "selected" : "")>In Review</option>
                    <option value="Done" @(Model.FilterStatus == TaskStatus.Done ? "selected" : "")>Done</option>
                </select>
            </div>
            <div class="col-md-2">
                <button class="btn btn-outline-secondary w-100" id="clearFilters">
                    <i class="bi bi-x-circle"></i> Clear
                </button>
            </div>
            <div class="col-md-2">
                <button class="btn btn-outline-info w-100" id="advancedFilterBtn" data-bs-toggle="modal" data-bs-target="#advancedFilterModal">
                    <i class="bi bi-funnel"></i> More
                </button>
            </div>
        </div>
    </div>

    <!-- Bulk Actions Bar (Hidden by default) -->
    <div class="bulk-actions-bar mt-2" id="bulkActionsBar" style="display: none;">
        <div class="alert alert-info mb-0">
            <span id="selectedCount">0</span> tasks selected
            <div class="btn-group float-end" role="group">
                <button class="btn btn-sm btn-warning" id="bulkStatusBtn" data-bs-toggle="modal" data-bs-target="#bulkStatusModal">
                    Change Status
                </button>
                <button class="btn btn-sm btn-info" id="bulkPriorityBtn" data-bs-toggle="modal" data-bs-target="#bulkPriorityModal">
                    Change Priority
                </button>
                <button class="btn btn-sm btn-secondary" id="clearSelection">
                    Clear Selection
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Kanban Board -->
<div class="kanban-board" id="kanbanBoard">
    @foreach (var status in Enum.GetValues(typeof(TaskStatus)).Cast<TaskStatus>())
    {
        var statusName = status.ToString();
        <div class="kanban-column" data-status="@statusName">
            <div class="column-header">
                <h5 class="mb-0">
                    <span class="status-badge status-@statusName.ToLower()">
                        @statusName
                    </span>
                </h5>
                <span class="badge bg-secondary task-count">
                    @{
                        var count = Model.TasksByList
                            .SelectMany(kvp => kvp.Value)
                            .Count(t => t.Status.ToString() == statusName);
                    }
                    @count
                </span>
            </div>

            <div class="tasks-container" data-status="@statusName" ondrop="handleDrop(event)" ondragover="handleDragOver(event)" ondragleave="handleDragLeave(event)">
                @{
                    var tasksForStatus = Model.TasksByList
                        .SelectMany(kvp => kvp.Value)
                        .Where(t => t.Status.ToString() == statusName)
                        .OrderBy(t => t.Priority.ToString())
                        .ToList();
                }

                @if (tasksForStatus.Any())
                {
                    @foreach (var task in tasksForStatus)
                    {
                        <partial name="Components/_TaskCard" model="task" />
                    }
                }
                else
                {
                    <div class="empty-state text-center py-4">
                        <i class="bi bi-inbox"></i>
                        <p class="text-muted small">No tasks yet</p>
                    </div>
                }
            </div>
        </div>
    }
</div>

<!-- Create Task Modal -->
<div class="modal fade" id="createTaskModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create New Task</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" action="@Url.Action("Create", "Tasks")" id="createTaskForm">
                <div class="modal-body">
                    <div class="form-group mb-3">
                        <label for="title" class="form-label">Title *</label>
                        <input type="text" class="form-control" id="title" name="title" required>
                    </div>

                    <div class="form-group mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea class="form-control" id="description" name="description" rows="3"></textarea>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="priority" class="form-label">Priority</label>
                                <select class="form-select" id="priority" name="priority">
                                    <option value="Low">Low</option>
                                    <option value="Normal" selected>Normal</option>
                                    <option value="High">High</option>
                                    <option value="Urgent">Urgent</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="dueDate" class="form-label">Due Date</label>
                                <input type="date" class="form-control" id="dueDate" name="dueDate">
                            </div>
                        </div>
                    </div>

                    <input type="hidden" id="listId" name="listId">
                    <input type="hidden" id="projectId" name="projectId" value="@Model.Project?.Id ?? 0">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Create Task</button>
                </div>
            </form>
        </div>
    </div>
</div>

