<div class="modal fade" id="bulkPriorityModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Change Priority for Selected Tasks</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="bulkPrioritySelect" class="form-label">New Priority</label>
                    <select class="form-select" id="bulkPrioritySelect">
                        <option value="">-- Select Priority --</option>
                        <option value="Low">Low</option>
