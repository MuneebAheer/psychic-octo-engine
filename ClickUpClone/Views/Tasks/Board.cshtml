        }
    }
</style>

<script>
    let draggedTaskId;
    let draggedFromStatus;

    // Initialize drag-drop and search
    document.addEventListener('DOMContentLoaded', function () {
        initializeDragDrop();
        initializeSearch();
        initializePriorityFilter();
    });

    function initializeDragDrop() {
        const taskCards = document.querySelectorAll('.task-card:not(.hidden)');
        taskCards.forEach(card => {
            card.draggable = true;
            card.addEventListener('dragstart', handleDragStart);
            card.addEventListener('dragend', handleDragEnd);
        });
    }

    function initializeSearch() {
        const searchInput = document.getElementById('searchInput');
        if (searchInput) {
            searchInput.addEventListener('input', filterTasks);
        }
    }

    function initializePriorityFilter() {
        const priorityFilter = document.getElementById('priorityFilter');
        if (priorityFilter) {
            priorityFilter.addEventListener('change', filterTasks);
        }
    }

    function handleDragStart(e) {
        draggedTaskId = e.currentTarget.getAttribute('data-task-id');
        draggedFromStatus = e.currentTarget.closest('.tasks-container').getAttribute('data-status');
        e.currentTarget.classList.add('dragging');
        e.dataTransfer.effectAllowed = 'move';
    }

    function handleDragEnd(e) {
        e.currentTarget.classList.remove('dragging');
        document.querySelectorAll('.tasks-container').forEach(container => {
            container.classList.remove('drag-over');
        });
    }

    function handleDragOver(e) {
        e.preventDefault();
        e.dataTransfer.dropEffect = 'move';
        e.currentTarget.classList.add('drag-over');
    }

    function handleDragLeave(e) {
        e.currentTarget.classList.remove('drag-over');
    }

    function handleDrop(e) {
        e.preventDefault();
        const dropZone = e.currentTarget;
        dropZone.classList.remove('drag-over');

        if (!draggedTaskId) return;

        const newStatus = dropZone.getAttribute('data-status');

        if (newStatus !== draggedFromStatus) {
            // Call AJAX to update task status
            updateTaskStatus(parseInt(draggedTaskId), newStatus);
            
            // Move card to new column
            const draggedCard = document.querySelector(`[data-task-id="${draggedTaskId}"]`);
            if (draggedCard && !draggedCard.classList.contains('hidden')) {
                draggedCard.remove();
                dropZone.appendChild(draggedCard);
                draggedCard.classList.remove('dragging');
                updateTaskCounts();
            }
        }
    }

    function updateTaskCounts() {
        document.querySelectorAll('.kanban-column').forEach(column => {
            const status = column.getAttribute('data-status');
            const container = column.querySelector('.tasks-container');
            const count = container.querySelectorAll('.task-card:not(.hidden)').length;
            const badge = column.querySelector('.task-count');
            
            if (badge) {
                badge.textContent = count;
            }

            // Show/hide empty state
            const emptyState = container.querySelector('.empty-state');
            if (count === 0) {
                if (!emptyState) {
                    const newEmptyState = document.createElement('div');
                    newEmptyState.className = 'empty-state text-center py-4';
                    newEmptyState.innerHTML = '<i class="bi bi-inbox"></i><p class="text-muted small">No tasks yet</p>';
                    container.appendChild(newEmptyState);
                }
            } else {
                if (emptyState) emptyState.remove();
            }
        });
    }

    function filterTasks() {
        const searchTerm = document.getElementById('searchInput').value.toLowerCase();
        const priorityFilter = document.getElementById('priorityFilter').value;
        const statusFilter = document.getElementById('statusFilter')?.value || '';

        const allCards = document.querySelectorAll('.task-card');
        
        allCards.forEach(card => {
            const title = card.querySelector('h6')?.textContent.toLowerCase() || '';
            const priority = card.querySelector('.badge')?.textContent || '';
            const status = card.closest('.tasks-container')?.getAttribute('data-status') || '';
            
            const matchesSearch = searchTerm === '' || title.includes(searchTerm);
            const matchesPriority = priorityFilter === '' || priority.includes(priorityFilter);
            const matchesStatus = statusFilter === '' || status.toLowerCase() === statusFilter.toLowerCase();
            
            if (matchesSearch && matchesPriority && matchesStatus) {
                card.classList.remove('hidden');
            } else {
                card.classList.add('hidden');
            }
        });

        updateTaskCounts();
    }

    function toggleTaskSelection(taskId, event) {
        event.preventDefault();
        const card = event.currentTarget;
        const checkbox = card.querySelector('input[type="checkbox"]');
        
        if (checkbox) {
            checkbox.checked = !checkbox.checked;
            card.classList.toggle('selected', checkbox.checked);
            updateBulkActionsBar();
        }
    }

    function updateBulkActionsBar() {
        const selectedCards = document.querySelectorAll('.task-card.selected');
        const bulkBar = document.getElementById('bulkActionsBar');
        const selectedCount = document.getElementById('selectedCount');
        
        if (selectedCards.length > 0) {
            bulkBar.style.display = 'block';
            selectedCount.textContent = selectedCards.length;
        } else {
            bulkBar.style.display = 'none';
        }
    }

    function clearSelection() {
        document.querySelectorAll('.task-card.selected').forEach(card => {
            card.classList.remove('selected');
            const checkbox = card.querySelector('input[type="checkbox"]');
            if (checkbox) checkbox.checked = false;
        });
        updateBulkActionsBar();
    }

    function getSelectedTaskIds() {
        return Array.from(document.querySelectorAll('.task-card.selected')).map(card => 
            parseInt(card.getAttribute('data-task-id'))
        );
    }

    function applyBulkStatus() {
        const statusSelect = document.getElementById('bulkStatusSelect');
        const newStatus = statusSelect?.value;
        
        if (!newStatus) {
            showNotification('Please select a status', 'warning');
            return;
        }

        const taskIds = getSelectedTaskIds();
        if (taskIds.length === 0) return;

        fetch('/api/tasks/bulk/status', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
            },
            body: JSON.stringify({ taskIds, newStatus })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                showNotification(`Updated ${data.updated} tasks`, 'success');
                clearSelection();
                location.reload();
            } else {
                showNotification('Error updating tasks', 'error');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            showNotification('Error updating tasks', 'error');
        });
    }

    function applyBulkPriority() {
        const prioritySelect = document.getElementById('bulkPrioritySelect');
        const newPriority = prioritySelect?.value;
        
        if (!newPriority) {
            showNotification('Please select a priority', 'warning');
            return;
        }

        const taskIds = getSelectedTaskIds();
        if (taskIds.length === 0) return;

        fetch('/api/tasks/bulk/priority', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
            },
            body: JSON.stringify({ taskIds, newPriority })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                showNotification(`Updated ${data.updated} tasks`, 'success');
                clearSelection();
                location.reload();
            } else {
                showNotification('Error updating tasks', 'error');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            showNotification('Error updating tasks', 'error');
        });
    }

    // Initialize event listeners
    document.addEventListener('DOMContentLoaded', function () {
        initializeDragDrop();
        initializeSearch();
        initializePriorityFilter();

        const statusFilter = document.getElementById('statusFilter');
        if (statusFilter) {
            statusFilter.addEventListener('change', filterTasks);
        }

        const clearFiltersBtn = document.getElementById('clearFilters');
        if (clearFiltersBtn) {
            clearFiltersBtn.addEventListener('click', function () {
                document.getElementById('searchInput').value = '';
                document.getElementById('priorityFilter').value = '';
                document.getElementById('statusFilter').value = '';
                filterTasks();
            });
        }

        const clearSelectionBtn = document.getElementById('clearSelection');
        if (clearSelectionBtn) {
            clearSelectionBtn.addEventListener('click', clearSelection);
        }
    });
</script>

<!-- Advanced Filter Modal -->
